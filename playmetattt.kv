#:kivy 1.0.9

<TicTacToeGame>:
    window_frame: window_frame

    game_space: game_space
    toolbar: toolbar
    ai_first_button: ai_first_button
    new_game: new_game
    meta_board: meta_board
    game_info: game_info
    ScrollView:
        id: window_frame
        size: (850, 600)
        size_hint: (None, None)
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_window_frame_y: True
        do_window_frame_x: True
        BoxLayout:
            id: game_space
            orientation: 'vertical'
            size: (850, 700)
            size_hint: (None, None)

            BoxLayout:
                id: toolbar
                size_hint: 1, 0.3
                orientation: 'horizontal'

                Button:
                    id: ai_first_button
                    text: 'AI first'

                Button:
                    id: new_game
                    text: 'New Game'

            Label:
                id: game_info
                size_hint: (1., 0.2)
                text: ''

            GridLayout:
                id: meta_board
                cols: 3
                padding: 20
                spacing: 20
